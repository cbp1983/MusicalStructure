<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/schubert"
    tools:context="com.example.android.musicstructure.MainActivity">

    <TextView
        android:id="@+id/poland"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/FrontPage"
        android:text="@string/polish" />

    <TextView
        android:id="@+id/italy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/FrontPage"
        android:text="@string/italian" />

    <TextView
        android:id="@+id/england"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/FrontPage"
        android:text="@string/english" />

    <TextView
        android:id="@+id/german"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/FrontPage"
        android:text="@string/german" />

</LinearLayout>